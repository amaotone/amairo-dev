{
	"name": "amairo-dev",
	"version": "0.0.0",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@types/react": "18.3.12",
		"eslint-config-custom": "^0.0.0",
		"husky": "9.1.6",
		"lint-staged": "15.2.10",
		"prettier": "^3.3.3",
		"turbo": "^2.2.3",
		"typescript": "5.6.3"
	},
	"engines": {
		"npm": ">=9.9.3",
		"node": ">=v18.16.1"
	},
	"resolutions": {
		"@types/react": "18.2.14"
	},
	"packageManager": "pnpm@8.6.2",
	"lint-staged": {
		"apps/**/*.{js,ts,jsx,tsx}": ["eslint --fix"],
		"packages/ui/**/*.{js,ts,jsx,tsx}": ["eslint --fix"],
		"*.{json,md,html}": ["prettier --write"]
	},
	"dependencies": {
		"@types/dom-to-image": "2.6.7",
		"dom-to-image": "2.6.0",
		"lefthook": "^1.8.2",
		"next": "15.0.2",
		"react": "18.3.1",
		"react-dom": "18.3.1"
	}
}
