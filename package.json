{
  "name": "amairo-dev",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@types/react": "18.3.18",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "5.7.2"
  },
  "engines": {
    "pnpm": ">=9.15.1",
    "node": ">=20.18.1"
  },
  "resolutions": {
    "@types/react": "18.3.18"
  },
  "packageManager": "pnpm@9.15.1",
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "lefthook": "^1.10.0"
  }
}
