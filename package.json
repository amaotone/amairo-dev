{
	"name": "amairo-dev",
	"version": "0.0.0",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"prepare": "lefthook install"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/react": "18.3.12",
		"prettier": "^3.3.3",
		"turbo": "^2.2.3",
		"typescript": "5.6.3"
	},
	"engines": {
		"pnpm": ">=9.1.0",
		"node": ">=v20.11.0"
	},
	"resolutions": {
		"@types/react": "18.3.12"
	},
	"packageManager": "pnpm@9.1.0",
	"lint-staged": {
		"apps/**/*.{js,ts,jsx,tsx}": ["eslint --fix"],
		"packages/ui/**/*.{js,ts,jsx,tsx}": ["eslint --fix"],
		"*.{json,md,html}": ["prettier --write"]
	},
	"dependencies": {
		"lefthook": "^1.8.2"
	}
}
