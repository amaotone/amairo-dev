{
  "name": "amairo-dev",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/react": "18.0.21",
    "eslint-config-custom": "*",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "latest",
    "turbo": "latest",
    "typescript": "4.8.3"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "npm@8.19.2",
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/dom-to-image": "2.6.4",
    "dom-to-image": "2.6.0",
    "next": "12.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
